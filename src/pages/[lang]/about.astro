---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'ne'}},
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

---

<Layout title={t('about.title') + " - GTBM"}>
  <section class="bg-primary text-white py-16 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-2 text-white">{t('about.title')}</h1>
      <p class="text-lg">{t('about.subtitle')}</p>
    </div>
  </section>

  <section id="profile" class="py-20 bg-background text-text">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-16 items-center">
        <div class="flex-1">
          <h2 class="text-2xl font-bold mb-4 text-primary">{t('about.profile.title')}</h2>
          <p class="mb-4 leading-relaxed">{t('about.profile.p1')}</p>
          <p class="mb-4 leading-relaxed">{t('about.profile.p2')}</p>
          <ul class="mt-6 flex flex-col gap-2">
            <li class="text-lg">✅ <strong>{t('about.value.integrity')}</strong> {t('about.value.integrity.desc')}</li>
            <li class="text-lg">✅ <strong>{t('about.value.quality')}</strong> {t('about.value.quality.desc')}</li>
            <li class="text-lg">✅ <strong>{t('about.value.innovation')}</strong> {t('about.value.innovation.desc')}</li>
          </ul>
        </div>
        <div class="flex-1 w-full">
           <div class="w-full h-[300px] bg-gray-200 flex items-center justify-center rounded-lg text-gray-500 font-semibold">About Us Image</div>
           <!-- Replace with team photo or office image -->
        </div>
      </div>
    </div>
  </section>

  <section id="director" class="py-20 bg-light-gray text-text">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8 text-primary">{t('about.director.title')}</h2>
      <div class="flex flex-col md:flex-row gap-12 items-start bg-card-bg p-8 md:p-12 rounded-lg shadow-sm mt-8 max-w-5xl mx-auto">
        <div class="w-[150px] h-[150px] rounded-full bg-gray-300 flex items-center justify-center mx-auto md:mx-0 flex-shrink-0">
            <div class="text-gray-600 font-semibold text-center">Kamal Kharel</div>
        </div>
        <div class="flex-1">
            <blockquote class="text-lg leading-relaxed text-text mb-4 italic">
              {t('about.director.message')}
            </blockquote>
            <cite class="font-bold text-primary not-italic block mt-4">{t('about.director.cite')}</cite>
        </div>
      </div>
    </div>
  </section>
</Layout>
