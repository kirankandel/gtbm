---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'ne'}},
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
import { getRelativeLocaleUrl } from 'astro:i18n';

function l(path: string) {
  return getRelativeLocaleUrl(lang, path);
}

---

<Layout title="GTBM - Building Dreams, Securing Futures">
  <!-- Hero Section -->
  <section class="relative h-[80vh] min-h-[500px] bg-[url('/images/hero.png')] bg-cover bg-center flex items-center text-white">
    <div class="absolute inset-0 bg-gradient-to-br from-[#005696]/70 to-black/40"></div>
    <div class="container mx-auto px-4 relative z-10 max-w-[800px] md:px-0">
      <h1 class="text-4xl md:text-6xl mb-6 text-white leading-tight">{t('home.hero.title')}</h1>
      <p class="text-xl mb-8 max-w-[600px]">{t('home.hero.subtitle')}</p>
      <div class="flex flex-col md:flex-row gap-4">
        <a href={l('services')} class="btn btn-primary bg-secondary text-white px-6 py-3 rounded-md font-semibold hover:bg-yellow-600 transition-colors inline-block text-center">{t('home.hero.cta.services')}</a>
        <a href={l('contact')} class="btn btn-secondary bg-transparent border-2 border-white text-white px-6 py-3 rounded-md font-semibold hover:bg-white hover:text-primary transition-colors inline-block text-center">{t('home.hero.cta.contact')}</a>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 bg-background text-text">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-primary mb-4">{t('home.services.title')}</h2>
        <p class="text-lg text-text-light">{t('home.services.subtitle')}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Service 1: Real Estate -->
        <a href={l('services#real-estate')} class="bg-card-bg p-8 rounded-lg shadow-sm text-center transition-all duration-300 border border-gray-100 hover:-translate-y-1 hover:shadow-lg hover:border-secondary block group">
          <div class="text-5xl mb-4">üè†</div>
          <h3 class="mb-2 text-primary text-xl font-bold group-hover:text-secondary transition-colors">{t('home.service.realestate')}</h3>
          <p class="text-text-light text-[0.95rem]">{t('home.service.realestate.desc')}</p>
        </a>

        <!-- Service 2: Construction -->
        <a href={l('services#construction')} class="bg-card-bg p-8 rounded-lg shadow-sm text-center transition-all duration-300 border border-gray-100 hover:-translate-y-1 hover:shadow-lg hover:border-secondary block group">
          <div class="text-5xl mb-4">üèóÔ∏è</div>
          <h3 class="mb-2 text-primary text-xl font-bold group-hover:text-secondary transition-colors">{t('home.service.construction')}</h3>
          <p class="text-text-light text-[0.95rem]">{t('home.service.construction.desc')}</p>
        </a>

        <!-- Service 3: Architecture -->
        <a href={l('services#design')} class="bg-card-bg p-8 rounded-lg shadow-sm text-center transition-all duration-300 border border-gray-100 hover:-translate-y-1 hover:shadow-lg hover:border-secondary block group">
          <div class="text-5xl mb-4">üìê</div>
          <h3 class="mb-2 text-primary text-xl font-bold group-hover:text-secondary transition-colors">{t('home.service.design')}</h3>
          <p class="text-text-light text-[0.95rem]">{t('home.service.design.desc')}</p>
        </a>

        <!-- Service 4: Maintenance -->
        <a href={l('services#maintenance')} class="bg-card-bg p-8 rounded-lg shadow-sm text-center transition-all duration-300 border border-gray-100 hover:-translate-y-1 hover:shadow-lg hover:border-secondary block group">
          <div class="text-5xl mb-4">üîß</div>
          <h3 class="mb-2 text-primary text-xl font-bold group-hover:text-secondary transition-colors">{t('home.service.maintenance')}</h3>
          <p class="text-text-light text-[0.95rem]">{t('home.service.maintenance.desc')}</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Director Highlight -->
  <section class="py-20 bg-light-gray text-text">
    <div class="container mx-auto px-4 flex flex-col md:flex-row items-center gap-16">
      <div class="flex-1 w-full max-w-[400px]">
<img src="/images/director.jpeg" alt="Kamal Kharel" class="w-full h-[400px] object-cover rounded-lg shadow-md" />
      </div>
      <div class="flex-[2] w-full text-center md:text-left">
        <h2 class="text-3xl font-bold text-primary mb-6">{t('home.director.welcome')}</h2>
        <blockquote class="text-2xl italic text-text mb-6 leading-relaxed border-t-4 pt-6 border-secondary md:border-t-0 md:border-l-4 md:pt-0 md:pl-6">
          {t('home.director.quote')}
        </blockquote>
        <p class="font-bold text-xl text-primary mb-0">{t('home.director.name')}</p>
        <p class="text-text-light">{t('home.director.title')}</p>
      </div>
    </div>
  </section>
</Layout>
