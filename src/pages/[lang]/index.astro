---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'ne'}},
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

---

<Layout title="GTBM - Building Dreams, Securing Futures">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <h1>Building Dreams, Securing Futures in Kathmandu.</h1>
      <p>Your trusted partner for Real Estate, Construction, and 2D/3D Architecture.</p>
      <div class="hero-cta">
        <a href="/services" class="btn btn-primary">Our Services</a>
        <a href="/contact" class="btn btn-secondary">Contact Us</a>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section services">
    <div class="container">
      <div class="section-header">
        <h2>Our Core Services</h2>
        <p>Comprehensive solutions for all your property needs.</p>
      </div>
      
      <div class="services-grid">
        <!-- Service 1: Real Estate -->
        <a href="/services#real-estate" class="service-card">
          <div class="icon">üè†</div>
          <h3>Real Estate</h3>
          <p>Buying, selling, and renting land and houses in prime locations.</p>
        </a>

        <!-- Service 2: Construction -->
        <a href="/services#construction" class="service-card">
          <div class="icon">üèóÔ∏è</div>
          <h3>Construction</h3>
          <p>Quality "Thekka" construction with verified materials and timelines.</p>
        </a>

        <!-- Service 3: Architecture -->
        <a href="/services#design" class="service-card">
          <div class="icon">üìê</div>
          <h3>2D/3D Design</h3>
          <p>Blueprints, Naksha Pass, and modern 3D visualizations.</p>
        </a>

        <!-- Service 4: Maintenance -->
        <a href="/services#maintenance" class="service-card">
          <div class="icon">üîß</div>
          <h3>Maintenance</h3>
          <p>Plotting services, plumbing, and property upkeep.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Director Highlight -->
  <section class="section director-highlight">
    <div class="container director-content">
      <div class="director-image">
        <div class="placeholder-img">Director Photo</div>
        <!-- Replace with actual photo of Kamal Kharel -->
      </div>
      <div class="director-text">
        <h2>Welcome to GTBM</h2>
        <blockquote>
          "We believe in building more than just houses; we build trust. Our commitment to quality and transparency ensures your investment is safe and your dream home becomes a reality."
        </blockquote>
        <p class="director-name">- Kamal Kharel</p>
        <p class="director-title">Director</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    height: 80vh;
    min-height: 500px;
    background-image: url('/images/hero.png');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    color: var(--color-white);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(0, 86, 150, 0.7), rgba(0, 0, 0, 0.4));
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-white);
    line-height: 1.1;
  }

  .hero p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    max-width: 600px;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
  }

  /* Sections Generic */
  .section {
    padding: 5rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  /* Services Grid */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: var(--color-white);
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #eee;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-secondary);
  }

  .service-card .icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .service-card h3 {
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

  .service-card p {
    color: var(--color-text-light);
    font-size: 0.95rem;
  }

  /* Director Highlight */
  .director-highlight {
    background-color: var(--color-light-gray);
  }

  .director-content {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .director-image {
    flex: 1;
    max-width: 400px;
  }

  .placeholder-img {
    width: 100%;
    height: 400px;
    background-color: #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--border-radius);
    color: #666;
    font-weight: 600;
  }

  .director-text {
    flex: 2;
  }

  .director-text blockquote {
    font-size: 1.5rem;
    font-style: italic;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    border-left: 4px solid var(--color-secondary);
    padding-left: 1.5rem;
  }

  .director-name {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-primary);
    margin-bottom: 0px; 
  }

  .director-title {
    color: var(--color-text-light);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }
    
    .hero-content {
        padding: 0 1rem;
    }

    .director-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .director-text blockquote {
        border-left: none;
        border-top: 4px solid var(--color-secondary);
        padding-left: 0;
        padding-top: 1.5rem;
    }
    
    .hero-cta {
        flex-direction: column;
        width: 100%;
    }
    
    .hero-cta .btn {
        width: 100%;
    }
  }
</style>
