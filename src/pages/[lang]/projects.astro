---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'ne'}},
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);


const projects = [
  {
    title: "Residential Land",
    location: "Imadol, Lalitpur",
    price: "NRs. 35 Lakhs/Aana",
    size: "4 Aana",
    road: "13 ft",
    type: "Sale",
    image: "https://placehold.co/600x400/005696/ffffff?text=Land+Imadol"
  },
  {
    title: "Luxury House on Rent",
    location: "Bhaisepati, Lalitpur",
    price: "NRs. 1.2 Lakhs/Month",
    size: "2.5 Storey, 10 Rooms",
    road: "20 ft",
    type: "Rent",
    image: "https://placehold.co/600x400/DAA520/ffffff?text=House+Rent"
  },
  {
    title: "Commercial Plot",
    location: "New Baneshwor",
    price: "Contact for Price",
    size: "8 Aana",
    road: "Main Road Access",
    type: "Sale",
    image: "https://placehold.co/600x400/2E8B57/ffffff?text=Commercial+Plot"
  },
  {
    title: "Modern Bungalow Project",
    location: "Budhanilkantha",
    price: "NRs. 4.5 Cr",
    size: "6 Aana",
    road: "16 ft",
    type: "Construction",
    image: "https://placehold.co/600x400/333333/ffffff?text=Bungalow+Project"
  }
];
---

<Layout title="Projects & Listings - GTBM">
  <section class="page-header">
    <div class="container">
      <h1>Projects & Listings</h1>
      <p>Explore our latest properties and completed construction projects.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="projects-grid">
        {projects.map((project) => (
          <div class="project-card">
            <div class="project-image">
                <img src={project.image} alt={project.title} />
                <span class="badge">{project.type}</span>
            </div>
            <div class="project-info">
              <h3>{project.title}</h3>
              <p class="location">üìç {project.location}</p>
              
              <div class="specs">
                <div class="spec-item">
                    <span class="label">Price:</span>
                    <span class="value">{project.price}</span>
                </div>
                <div class="spec-item">
                    <span class="label">Size:</span>
                    <span class="value">{project.size}</span>
                </div>
                 <div class="spec-item">
                    <span class="label">Road:</span>
                    <span class="value">{project.road}</span>
                </div>
              </div>

              <a href="/contact" class="btn btn-secondary full-width">Book a Site Visit</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 4rem 0;
    text-align: center;
  }

  .section {
    padding: 5rem 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: box-shadow 0.3s ease;
    border: 1px solid #eee;
  }

  .project-card:hover {
    box-shadow: var(--shadow-lg);
  }

  .project-image {
    position: relative;
    height: 200px;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: var(--color-accent);
    color: white;
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .project-info {
    padding: 1.5rem;
  }

  .project-info h3 {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }

  .location {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .specs {
    background-color: var(--color-light-gray);
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1.5rem;
  }

  .spec-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
  }

  .spec-item:last-child {
      margin-bottom: 0;
  }

  .spec-item .label {
      color: #666;
  }

  .spec-item .value {
      font-weight: 600;
      color: var(--color-text);
  }

  .full-width {
      display: block;
      width: 100%;
      text-align: center;
  }
</style>
