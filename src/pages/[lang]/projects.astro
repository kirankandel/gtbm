---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'ne'}},
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
import { getRelativeLocaleUrl } from 'astro:i18n';

function l(path: string) {
  return getRelativeLocaleUrl(lang, path);
}


const projects = [
  {
    title: "Residential Land",
    location: "Imadol, Lalitpur",
    price: "NRs. 35 Lakhs/Aana",
    size: "4 Aana",
    road: "13 ft",
    type: "Sale",
    image: "https://placehold.co/600x400/005696/ffffff?text=Land+Imadol"
  },
  {
    title: "Luxury House on Rent",
    location: "Bhaisepati, Lalitpur",
    price: "NRs. 1.2 Lakhs/Month",
    size: "2.5 Storey, 10 Rooms",
    road: "20 ft",
    type: "Rent",
    image: "https://placehold.co/600x400/DAA520/ffffff?text=House+Rent"
  },
  {
    title: "Commercial Plot",
    location: "New Baneshwor",
    price: "Contact for Price",
    size: "8 Aana",
    road: "Main Road Access",
    type: "Sale",
    image: "https://placehold.co/600x400/2E8B57/ffffff?text=Commercial+Plot"
  },
  {
    title: "Modern Bungalow Project",
    location: "Budhanilkantha",
    price: "NRs. 4.5 Cr",
    size: "6 Aana",
    road: "16 ft",
    type: "Construction",
    image: "https://placehold.co/600x400/333333/ffffff?text=Bungalow+Project"
  }
];
---

<Layout title={t('projects.title') + " - GTBM"}>
  <section class="bg-primary text-white py-16 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-2 text-white">{t('projects.title')}</h1>
      <p class="text-lg">{t('projects.subtitle')}</p>
    </div>
  </section>

  <section class="py-20 bg-background text-text">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="bg-card-bg rounded-lg shadow-sm overflow-hidden transition-all duration-300 border border-gray-100 hover:shadow-lg group">
            <div class="relative h-[200px]">
                <img src={project.image} alt={project.title} class="w-full h-full object-cover" />
                <span class="absolute top-2 right-2 bg-accent text-white px-3 py-1 rounded text-xs font-bold">{project.type}</span>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">{project.title}</h3>
              <p class="text-text-light text-sm mb-4 flex items-center gap-1">üìç {project.location}</p>
              
              <div class="bg-light-gray p-4 rounded mb-6">
                <div class="flex justify-between mb-1 last:mb-0 text-sm">
                    <span class="text-gray-600">{t('projects.label.price')}</span>
                    <span class="font-semibold text-text">{project.price}</span>
                </div>
                <div class="flex justify-between mb-1 last:mb-0 text-sm">
                    <span class="text-gray-600">{t('projects.label.size')}</span>
                    <span class="font-semibold text-text">{project.size}</span>
                </div>
                 <div class="flex justify-between mb-1 last:mb-0 text-sm">
                    <span class="text-gray-600">{t('projects.label.road')}</span>
                    <span class="font-semibold text-text">{project.road}</span>
                </div>
              </div>

              <a href={l('contact')} class="btn btn-secondary w-full block text-center bg-transparent border-2 border-primary text-primary px-4 py-2 rounded font-semibold hover:bg-primary hover:text-white transition-colors">{t('projects.cta')}</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
