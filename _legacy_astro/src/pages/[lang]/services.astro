        <h2 class="text-2xl font-bold text-primary mb-4">{t('services.realestate.title')}</h2>
        <p class="text-text mb-4 leading-relaxed">{t('services.realestate.desc')}</p>
        <ul class="list-disc pl-6 mt-4 marker:text-primary space-y-2">
            <li>{t('services.realestate.item1')}</li>
            <li>{t('services.realestate.item2')}</li>
            <li>{t('services.realestate.item3')}</li>
            <li>{t('services.realestate.item4')}</li>
