      <p class="text-lg">{t('services.subtitle')}</p>
    </div>
  </section>

  <div class="container mx-auto px-4">
    
    <!-- Real Estate Section -->
    <section id="real-estate" class="flex flex-col md:flex-row items-center gap-16 py-16 border-b border-gray-100 last:border-0 scroll-mt-24">
